<% layout("layouts/boilerplate") %>

<div class="row">
    <h1 class="text-center">New Camp Form</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Campground title" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Campground location" required>
            </div class="mb-3">
            <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input class="form-control" type="text" name="campground[image]" id="image" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" name="campground[price]" required>
                    <span class="input-group-text">MXN</span>
                </div>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text">Description</span>
                <textarea name="campground[description]" id="description" class="form-control" required></textarea>
            </div>
            <button class="btn btn-success mt-3">Add Campground</button>
        </form>
        <a class="btn btn-info my-3" href="/campgrounds">All campgrounds</a>
    </div>
</div>